{
    "compilerOptions": {
        "experimentalDecorators": true,
        "strict": true,
        "target": "ES5",
        "lib": [
            "ES5",
            "ES2015.Promise"
        ],
        "outDir": "./dist",
        "declaration": true,
        "typeRoots": [
            "./node_modules/@types",
            "./definitions"
        ],
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "__tests__"
    ]
}